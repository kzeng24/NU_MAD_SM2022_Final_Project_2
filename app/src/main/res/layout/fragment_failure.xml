<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout3"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Failure">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/textViewFailureOhNo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:text="@string/failureOhNo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewFailurePetPunishment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Punishment:"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewFailureOhNo" />

    <ImageView
        android:id="@+id/imageViewFailurePet"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="200dp"
        android:layout_marginBottom="32dp"
        android:contentDescription="failure pet image"
        android:src="@android:drawable/screen_background_light"
        app:layout_constraintBottom_toTopOf="@+id/buttonFailureBackToHome"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewFailurePetPunishment" />

    <Button
        android:id="@+id/buttonFailureBackToHome"
        android:layout_width="142dp"
        android:layout_height="142dp"
        android:layout_marginBottom="56dp"
        android:background="@drawable/paw2"
        android:text="@string/backToHome"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/imageViewFailurePetMood"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="32dp"
        android:src="@android:drawable/screen_background_light"
        app:layout_constraintBottom_toTopOf="@+id/buttonFailureBackToHome"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageViewFailurePet"
        app:layout_constraintTop_toBottomOf="@+id/textViewFailurePetPunishment" />

</androidx.constraintlayout.widget.ConstraintLayout>